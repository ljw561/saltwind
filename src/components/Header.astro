---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/tags', label: 'Tags' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
  <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      Saltwind
    </a>

    <div class="flex items-center gap-6">
      <ul class="flex items-center gap-4">
        {navItems.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'text-sm font-medium transition-colors',
                currentPath === href || (href !== '/' && currentPath.startsWith(href))
                  ? 'text-primary-600 dark:text-primary-400'
                  : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white'
              ]}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>

      <ThemeToggle />
    </div>
  </nav>
</header>
