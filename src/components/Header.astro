---
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');

const navItems = isEnglish
  ? [
      { href: '/en/', label: 'Home' },
      { href: '/en/blog', label: 'Blog' },
      { href: '/en/tags', label: 'Tags' },
      { href: '/about', label: 'About' },
    ]
  : [
      { href: '/', label: 'Home' },
      { href: '/blog', label: 'Blog' },
      { href: '/tags', label: 'Tags' },
      { href: '/about', label: 'About' },
    ];

const homeUrl = isEnglish ? '/en/' : '/';

// Language switch URL
const langSwitchUrl = isEnglish ? '/' : '/en/';
const langSwitchLabel = isEnglish ? '中文' : 'EN';
---

<header class="border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
  <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href={homeUrl} class="text-xl font-bold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      Saltwind
    </a>

    <div class="flex items-center gap-4">
      <ul class="flex items-center gap-2 sm:gap-4">
        {navItems.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'text-sm font-medium transition-colors px-2 py-1',
                currentPath === href || (href !== '/' && href !== '/en/' && currentPath.startsWith(href))
                  ? 'text-primary-600 dark:text-primary-400'
                  : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white'
              ]}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
      <a
        href={langSwitchUrl}
        class="text-sm font-medium px-2 py-1 border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors text-gray-600 dark:text-gray-400"
      >
        {langSwitchLabel}
      </a>
    </div>
  </nav>
</header>
