---
import type { CollectionEntry } from 'astro:content';
import TagList from './TagList.astro';

interface Props {
  post: CollectionEntry<'blog'> | CollectionEntry<'blog-en'>;
  basePath?: string;
}

const { post, basePath = '/blog' } = Astro.props;
const { title, description, pubDate, tags } = post.data;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`${basePath}/${post.slug}`} class="block">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
      {title}
    </h2>
    <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-2">
      {description}
    </p>
    <time class="mt-2 block text-sm text-gray-500 dark:text-gray-500" datetime={pubDate.toISOString()}>
      {formattedDate}
    </time>
  </a>
  {tags.length > 0 && (
    <div class="mt-3">
      <TagList tags={tags} />
    </div>
  )}
</article>
